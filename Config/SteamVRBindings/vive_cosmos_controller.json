{
	"name": "Default bindings for HTC Cosmos Controllers",
	"controller_type": "vive_cosmos_controller",
	"last_edited_by": "UnrealEngine",
	"bindings":
	{
		"/actions/main":
		{
			"sources": [
				{
					"mode": "button",
					"path": "/user/hand/left/input/trigger",
					"inputs":
					{
						"click":
						{
							"output": "/actions/main/in/GrabLeft"
						}
					}
				},
				{
					"mode": "button",
					"path": "/user/hand/right/input/trigger",
					"inputs":
					{
						"click":
						{
							"output": "/actions/main/in/GrabRight"
						}
					}
				},
				{
					"mode": "button",
					"path": "/user/hand/left/input/y",
					"inputs":
					{
						"click":
						{
							"output": "/actions/main/in/LaserLeft"
						}
					}
				},
				{
					"mode": "button",
					"path": "/user/hand/right/input/b",
					"inputs":
					{
						"click":
						{
							"output": "/actions/main/in/LaserRight"
						}
					}
				},
				{
					"mode": "dpad",
					"path": "/user/hand/left/input/joystick",
					"parameters":
					{
						"sub_mode": "click"
					},
					"inputs":
					{
						"north":
						{
							"output": "/actions/main/in/TeleportLeft"
						}
					}
				},
				{
					"mode": "dpad",
					"path": "/user/hand/right/input/joystick",
					"parameters":
					{
						"sub_mode": "click"
					},
					"inputs":
					{
						"north":
						{
							"output": "/actions/main/in/TeleportRight"
						}
					}
				},
				{
					"mode": "button",
					"path": "/user/hand/left/input/grip",
					"inputs":
					{
						"click":
						{
							"output": "/actions/main/in/ToggleGrabLeft"
						}
					}
				},
				{
					"mode": "button",
					"path": "/user/hand/right/input/grip",
					"inputs":
					{
						"click":
						{
							"output": "/actions/main/in/ToggleGrabRight"
						}
					}
				}
			],
			"poses": [
				{
					"output": "/actions/main/in/controllerleft",
					"path": "/user/hand/left/pose/raw",
					"requirement": "optional"
				},
				{
					"output": "/actions/main/in/controllerright",
					"path": "/user/hand/right/pose/raw"
				}
			],
			"skeleton": [
				{
					"output": "/actions/main/in/skeletonleft",
					"path": "/user/hand/left/input/skeleton/left"
				},
				{
					"output": "/actions/main/in/skeletonright",
					"path": "/user/hand/right/input/skeleton/right"
				}
			],
			"haptics": [
				{
					"output": "/actions/main/out/vibrateleft",
					"path": "/user/hand/left/output/haptic"
				},
				{
					"output": "/actions/main/out/vibrateright",
					"path": "/user/hand/right/output/haptic"
				}
			]
		}
	},
	"description": ""
}